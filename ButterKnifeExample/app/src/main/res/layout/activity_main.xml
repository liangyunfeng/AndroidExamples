<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.liangyunfeng.butterknife.MainActivity">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="right|center_vertical"
        android:text="User: "
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_user"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintLeft_toRightOf="@+id/tv_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_user" />

    <TextView
        android:id="@+id/tv_psw"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:gravity="right|center_vertical"
        android:text="Password: "
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_user"
        app:layout_constraintRight_toRightOf="@+id/tv_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_user" />

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_psw"
        app:layout_constraintLeft_toLeftOf="@+id/et_user"
        app:layout_constraintRight_toRightOf="@+id/et_user"
        app:layout_constraintTop_toTopOf="@+id/tv_psw"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/et_psw"
        android:text="Submit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancel"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.562" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="-8dp"
        android:layout_marginTop="0dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_submit"
        app:layout_constraintRight_toRightOf="@+id/et_psw"
        app:layout_constraintTop_toTopOf="@+id/btn_submit"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
