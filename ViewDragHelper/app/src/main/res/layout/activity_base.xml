<?xml version="1.0" encoding="utf-8"?>
<com.github.liangyunfeng.drag.tradition.DragViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        style="@style/style_text_item"
        android:layout_gravity="top|start"
        android:background="@drawable/bg_text_item_blue"
        android:text="人生如逆旅，我亦是行人。" />

    <TextView
        style="@style/style_text_item"
        android:layout_gravity="center"
        android:background="@drawable/bg_text_item_green"
        android:text="要么庸俗，要么孤独。" />

    <TextView
        style="@style/style_text_item"
        android:layout_gravity="bottom|end"
        android:background="@drawable/bg_text_item_red"
        android:text="不乱于心，不困于情。不畏未来，不念过去。如此，安好。" />
</com.github.liangyunfeng.drag.tradition.DragViewGroup>
